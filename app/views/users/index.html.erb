<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<div id="users">
  <% @users.each_with_index do |user, index| %>
    <div class="user-item" style="margin-bottom: 1rem;">
      <h3>User <%= index + 1 %></h3>
      <%= render user %>
      <p>
        <%= link_to "Show this user", user %>
      </p>
    </div>
  <% end %>
</div>

<%= link_to "New user", new_user_path %>

<div style="margin-top: 1rem;">
  <%= button_to "Delete All Users", destroy_all_users_path, method: :delete, data: { confirm: "Are you sure you want to delete ALL users? This cannot be undone." } %>
</div>
